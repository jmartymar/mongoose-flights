<!DOCTYPE html>
<html>
  <head>
    <title>Mongoose Flights</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script> 
  <style>
    tr.table-danger > td{
      color: red!important;
    }
  </style>
  </head>
  <body class="bg-dark">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/flights">Mongoose Flights</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/flights">All Flights</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/flights/new">New Flight</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-6 offset-3">
          <table class="table table-dark table-hover table-striped table-bordered mt-5">
            <thead>
              <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departure</th>
              </tr>
            </thead>
            <tbody class="table-group-divider">
            <% flights.forEach(flight => {
                const now = new Date();
                if(now > flight.departs) { %>
                  <tr class="table-danger"> 
             <% } else { %>
                  <tr>
             <% } %>
              <td>
                <%= flight.airline %>
              </td>
              <td>
                <%= flight.airport %>
              </td>
              <td>
                <%= flight.flightNo %>
              </td>
              <td>
                <%= flight.departs.toLocaleDateString() + ' ' + flight.departs.toLocaleTimeString() %>
              </td>
            </tr>
            <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
